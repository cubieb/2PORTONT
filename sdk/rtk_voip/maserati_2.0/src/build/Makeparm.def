XCC = $(CC)

#----------------------------------------------------------------------
# compiler rules
#

.PHONY: all clean

ifdef RCM_SIMULATION
$(OBJ_DIR)/%.o: %.c
	$(XCC) -c -o $@ $(CFLAGS) $(EXTRACFLAGS) -Wa,-a,-ad $< > $(@:.o=.lst)
	$(XCC) -M $(CFLAGS) $(EXTRACFLAGS) $< | sed -e "s#^$(*F).o[ :]*#$(@D)\/$(*F).o : #" > $(@:.o=.d)
else
$(OBJ_DIR)/%.o: %.c
	$(XCC) -c -o $@ $(CFLAGS) $(EXTRACFLAGS) $<
	$(XCC) -M $(CFLAGS) $(EXTRACFLAGS) $< | sed -e "s#^$(*F).o[ :]*#$(@D)\/$(*F).o : #" > $(@:.o=.d)
endif
